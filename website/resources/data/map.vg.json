{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "width": 900,
  "height": 500,
  "autosize": "none",

  "signals": [
    { "name": "tx", "update": "width / 2" },
    { "name": "ty", "update": "height / 2" },
    {
      "name": "scale",
      "value": 300,
      "on": [{
        "events": {"type": "wheel", "consume": true},
        "update": "clamp(scale * pow(1.0005, -event.deltaY * pow(16, event.deltaMode)), 300, 3000)"
      }]
    },
    {
      "name": "angles",
      "value": [0, 0],
      "on": [{
        "events": "pointerdown",
        "update": "[rotateX, centerY]"
      }]
    },
    {
      "name": "cloned",
      "value": null,
      "on": [{
        "events": "pointerdown",
        "update": "copy('projection')"
      }]
    },
    {
      "name": "start",
      "value": null,
      "on": [{
        "events": "pointerdown",
        "update": "invert(cloned, xy())"
      }]
    },
    {
      "name": "drag", "value": null,
      "on": [{
        "events": "[pointerdown, window:pointerup] > window:pointermove",
        "update": "invert(cloned, xy())"
      }]
    },
    {
      "name": "delta", "value": null,
      "on": [{
        "events": {"signal": "drag"},
        "update": "[drag[0] - start[0], start[1] - drag[1]]"
      }]
    },
    {
      "name": "rotateX", "value": 0,
      "on": [{
        "events": {"signal": "delta"},
        "update": "angles[0] + delta[0]"
      }]
    },
    {
      "name": "centerY", "value": 0,
      "on": [{
        "events": {"signal": "delta"},
        "update": "clamp(angles[1] + delta[1], -60, 60)"
      }]
    },
    {
      "name": "point",
      "value": {},
      "on": [
        {"events": "symbol:mouseover", "update": "datum"},
        {"events": "symbol:mouseout", "update": "{}"}
      ]
    },
    {
      "name": "selected",
      "value": {},
      "on": [{"events": "symbol:click", "update": "datum"}]
    },
    {
      "name": "showTravel",
      "value": false,
      "on": [{"events": "dblclick", "update": "!showTravel"}]
    }
  ],

  "projections": [
    {
      "name": "projection",
      "type": "mercator",
      "scale": {"signal": "scale"},
      "rotate": [{"signal": "rotateX"}, 0, 0],
      "center": [0, {"signal": "centerY"}],
      "translate": [{"signal": "tx"}, {"signal": "ty"}]
    }
  ],

  "data": [
    {"name": "stateID", "url": "website/resources/data/stateID.json"},
    {"name": "countryID", "url": "website/resources/data/countryID.json"},
    {
      "name": "travel",
      "url": "website/resources/data/travel.json",
      "transform": [
        {
          "type": "lookup", 
          "key": "state", 
          "from": "stateID", "fields": ["state"],
          "values": ["id"], "as": ["stateID"]
        },
        {
          "type": "lookup", 
          "key": "name", 
          "from": "countryID", "fields": ["country"],
          "values": ["id"], "as": ["countryID"]
        }
      ]
    },
    {
      "name": "states",
      "url": "website/resources/data/us-10m.json",
      "format": {"type": "topojson", "feature": "states"},
      "transform": [
        {
          "type": "lookup", 
          "fields": ["id"],
          "from": "travel", "key": "stateID", 
          "values": ["year"]
        }
      ]
    },
    {
      "name": "world",
      "url": "website/resources/data/world-110m.json",
      "format": {"type": "topojson", "feature": "countries"},
      "transform": [
        {
          "type": "lookup", 
          "fields": ["id"],
          "from": "travel", "key": "countryID",
          "values": ["year"]
        }
      ]
    },
    {
      "name": "conferences",
      "url": "website/resources/data/conferences.json",
      "format": {"parse": {"date": "date"}},
      "transform": [
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["longitude", "latitude"]
        },
        {
          "type": "formula",
          "as": "attendee-status",
          "expr": "datum.presented ? (now() < datum.date ? 'Presenter (future)' : 'Presenter') : 'Attendee'"
        }
      ]
    },
    {
      "name": "text",
      "values": [
        {"text": "World Map of Conference Travel", "weight": "bold", "y": 30, "size": 20},
        {"text": "Hover over a conference to view the name and year. Click on", "y": 45},
        {"text": "an image to view the corresponding publication information.", "y": 60}
      ]
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "reverse": true,
      "range": ["#84c588", "#4f7551", "black"],
      "domain": ["Presenter (future)", "Presenter", "Attendee"]
    },
    {
      "name": "shape",
      "type": "ordinal",
      "range": ["circle", "triangle-up", "diamond", "cross"],
      "domain": ["CHI", "VIS", "EuroVis", "Other"]
    }
  ],

  "legends": [
    {
      "type": "symbol",
      "shape": "shape",
      "orient": "bottom-left",
      "title": "Conferences",
      "encode": {
        "symbols": {
          "enter": {
            "fill": {"value": "#4f7551"},
            "stroke": {"value": "#ccc"},
            "strokeWidth": {"value": 0.2}
          }
        }
      }
    },
    {
      "fill": "color",
      "orient": "bottom-left",
      "title": "Attendance Status",
      "encode": {
        "symbols": {
          "enter": {
            "stroke": {"value": "#ccc"},
            "strokeWidth": {"value": 0.2}
          }
        }
      }
    }
  ],

  "marks": [
    {
      "type": "shape",
      "from": {"data": "world"},
      "encode": {
        "update": {
          "strokeWidth": {"value": 1},
          "stroke": {"value": "#bbb"},
          "fill": [
            {
              "test": "datum.year > 0 && showTravel",
              "value": "#aaa"
            },
            {"value": "#eee"}
          ],
          "zindex": {"value": 0}
        }
      },
      "transform": [
        { "type": "geoshape", "projection": "projection" }
      ]
    },
    {
      "type": "shape",
      "from": {"data": "states"},
      "encode": {
        "update": {
          "strokeWidth": {"value": 1},
          "stroke": {"value": "#bbb"},
          "fill": [
            {
              "test": "datum.year > 0 && showTravel",
              "value": "#aaa"
            },
            {"value": "#eee"}
          ],
          "zindex": {"value": 0}
        }
      },
      "transform": [
        { "type": "geoshape", "projection": "projection" }
      ]
    },
    {
      "type": "symbol",
      "from": {"data": "conferences"},
      "encode": {
        "enter": {
          "shape": [
            {"test": "datum.conference == 'CHI'", "value": "circle"},
            {"test": "datum.conference == 'VIS'", "value": "triangle-up"},
            {"test": "datum.conference == 'EuroVis'", "value": "diamond"},
            {"value": "cross"}
          ],
          "size": {"value": 200},
          "fill": {"scale": "color", "field": "attendee-status"},
          "fillOpacity": {"value": 0.8},
          "stroke": {"value": "white"},
          "strokeWidth": {"value": 1.5},
          "cursor": {"value": "pointer"}
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"}
        }
      }
    },
    {
      "type": "group",
      "interactive": false,
      "marks": [
        {
          "type": "image",
          "from": {"data": "conferences"},
          "interactive": false,
          "encode": {
            "enter": {
              "url": {"field": "image"},
              "width": {"value": 120},
              "height": {"value": 60},
              "aspect": {"value": true},
              "opacity": {"value": 0}
            },
            "update": {
              "x": {"field": "x", "offset": 6},
              "y": {"field": "y", "offset": 6},
              "opacity": {"signal": "point === datum ? 1 : 0"}
            }
          }
        },
        {
          "type": "rect",
          "from": {"data": "conferences"},
          "interactive": false,
          "encode": {
            "enter": {
              "width": {"value": 120},
              "height": {"value": 14},
              "fill": {"value": "#777777"},
              "opacity": {"value": 0},
              "cornerRadius": {"value": 4}
            },
            "update": {
              "x": {"field": "x", "offset": 6},
              "y": {"field": "y", "offset": -8},
              "opacity": {"signal": "point === datum ? 0.8 : 0"}
            }
          }
        },
        {
          "type": "text",
          "from": {"data": "conferences"},
          "interactive": false,
          "encode": {
            "enter": {
              "text": {"field": "text"},
              "width": {"value": 120},
              "height": {"value": 12},
              "fill": {"value": "white"},
              "opacity": {"value": 0}
            },
            "update": {
              "x": {"field": "x", "offset": 10},
              "y": {"field": "y", "offset": 3},
              "opacity": {"signal": "point === datum ? 0.8 : 0"}
            }
          }
        }
      ]
    },
    {
      "type": "group",
      "interactive": false,
      "marks": [
        {
          "from": {"data": "text"},
          "type": "text",
          "encode": {
            "enter": {
              "text": {"field": "text"},
              "fontWeight": {"field": "weight"},
              "fontSize": {"field": "size"}
            },
            "update": {
              "x": {"value": 10},
              "y": {"field": "y"}
            }
          }
        }
      ]
    }
  ]
}